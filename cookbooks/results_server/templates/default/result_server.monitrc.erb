check process result_server_<%= @app_name %>_unix
  with pidfile /data/<%= @app_name %>/current/tmp/pids/pikimal_results_<%= @node[:environment][:framework_env] %>.pid
  every 10 cycles
  start program = "/bin/sh -c  '/etc/init.d/result_server.<%= @app_name %> start'" as uid <%= @user %> and gid <%= @user %> with timeout 180 seconds
  stop program = "/bin/sh -c '/etc/init.d/result_server.<%= @app_name %> stop'" as uid <%= @user %> and gid <%= @user %> with timeout 180 seconds
  group result_server_<%= @app_name %>