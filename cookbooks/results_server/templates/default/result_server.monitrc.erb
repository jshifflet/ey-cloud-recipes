check process result_server
  with pidfile /data/<%= @app_name %>/current/tmp/pids/pikimal_results_<%= @node[:environment][:framework_env] %>.pid
  every 10 cycles
  start = "/etc/init.d/result_server start" as uid <%= @user %> and gid <%= @user %> with timeout 180 seconds
  stop = "/etc/init.d/result_server stop" as uid <%= @user %> and gid <%= @user %> with timeout 180 seconds  
  group result_server

